@model IEnumerable<ECommerce.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div class="shop">
    <div class="container">
        <div class="row">

            <div class="col-md-12">

                <!-- Shop Content -->

                <div class="shop_content">
                    <div class="shop_bar clearfix">
                        <div class="shop_product_count"><span>@Model.Count()</span> products found</div>
                        
                    </div>

                    <div class="product_grid">
                        <div class="product_grid_border"></div>
                        <div class="row">

                            @foreach (var item in Model)
                            {

                                <!-- Product Item -->
                                <div class="col-lg-4 col-md-6 mb-4 product_item is_new">
                                    <div class="product_border"></div>
                                    <div class="product_image d-flex flex-column align-items-center justify-content-center">
                                        <img src="@item.ImagePath" asp-append-version="true">

                                    </div>
                                    <div class="product_content">
                                        <div class="product_price">$@Html.DisplayFor(modelItem => item.Price)</div>
                                        <div class="product_name">
                                            <div><a href="#" tabindex="0">@Html.DisplayFor(modelItem => item.Name)</a></div>
                                        </div>
                                    </div>
                                    <div>

                                        <button class="btn btn-primary" onclick="addToCart('@item.Id');">Add to Cart</button>
                                    </div>
                                    <div class="product_fav"><i class="fas fa-heart"></i></div>
                                    <ul class="product_marks">
                                        <li class="product_mark product_discount">-25%</li>
                                        <li class="product_mark product_new">new</li>
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Shop Page Navigation -->

                    <!--<div class="shop_page_nav d-flex flex-row">
                        <div class="page_prev d-flex flex-column align-items-center justify-content-center"><i class="fas fa-chevron-left"></i></div>
                        <ul class="page_nav d-flex flex-row">
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">...</a></li>
                            <li><a href="#">21</a></li>
                        </ul>
                        <div class="page_next d-flex flex-column align-items-center justify-content-center"><i class="fas fa-chevron-right"></i></div>
                    </div>-->

                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/lib/jquery/dist/jquery.js"></script>
}

<script src="~/lib/jquery/dist/jquery.js"></script>


<script>

    function addToCart(id) {
        console.log('Hello ');
        $.ajax({
            type: "GET",
            url: '/Home/AddToShoppingCart/' + id,
            success: function (response) {
                alert(response);
                $("#cartDiv").load(location.href +" #cartDiv>*","");
            }

        })
    }
</script>


